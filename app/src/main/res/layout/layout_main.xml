<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/btn_permission_float_window"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="授权:悬浮窗" />

    <Button
        android:id="@+id/btn_permission_accessibility"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="授权:无障碍" />

    <TextView
        android:id="@+id/tv_hint_accessibility"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="在设置->无障碍菜单中，选择EHHelper，允许授权，即可使用抖音滑动功能" />

    <Button
        android:id="@+id/btn_start_server"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="开启服务" />

    <Button
        android:id="@+id/btn_end_server"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="关闭服务" />
</androidx.appcompat.widget.LinearLayoutCompat>